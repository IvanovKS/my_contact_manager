{
  "compilerOptions": {
    "baseUrl": "src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["jest", "@testing-library/jest-dom", "node"],
    "jsx": "react-jsx",
    "paths": {
      "@app/*": ["app/*"],
      "@shared/*": ["shared/*"],
      "@shared": ["shared/index.ts"],
      "@entities/*": ["entities/*"],
      "@features/*": ["features/*"],
      "@pages/*": ["pages/*"],
      "@widgets/*": ["widgets/*"],
      "@processes/*": ["processes/*"]
    }
  },
  "include": ["src", "jest.setup.ts", "src/types"]
}
